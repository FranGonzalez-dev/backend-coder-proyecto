<section class="min-h-screen flex items-center justify-center">
    <article class="card w-1/2 h-full">
        <h1 class='text-2xl text-center mb-10'>
            Nuevo producto
        </h1>
        <form class="w-full flex flex-col gap-4" action="/products" method="post">
            <div class="join gap-4">
                <input type="text" name="title" class="input input-bordered w-full" placeholder="Título del producto" required>
                <input type="url" name="thumbnail" class="input input-bordered w-full" placeholder="URL de la imágen del producto" required>
            </div>
            <div class="join gap-4">
                <input type="number" name="price" class="input input-bordered w-full" placeholder="Precio del producto" required>
                <input type="number" name="stock" class="input input-bordered w-full" placeholder="Stock del producto" required>
            </div>
            <textarea name="description" rows="4" class="textarea textarea-bordered w-full" placeholder="Descripción" required></textarea>

            <button type="submit" class="btn btn-primary text-primary hover:text-base-100">
                Crear
            </button>
        </form>
    </article>
</section>